{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es5"
  },
  "exclude": [
    "dist",
    "docs",
    "node_modules",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": "**/*.js"
  }
}
